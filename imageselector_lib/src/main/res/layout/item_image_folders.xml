<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/image_folders_padding_left"
    android:paddingRight="@dimen/image_folders_padding_right"
    android:paddingTop="@dimen/image_folders_padding_top"
    android:paddingBottom="@dimen/image_folders_padding_bottom"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_folder_first_image"
        android:layout_width="@dimen/folder_icon_width"
        android:layout_height="@dimen/folder_icon_width" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_imagefold_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_17"
            android:gravity="center_vertical"
            android:text="相册"/>
        <TextView
            android:id="@+id/image_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_12"
            android:gravity="center_vertical"
            android:text="张"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_fold_checked"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:checked="true"
        android:layout_marginRight="10dp"/>
</LinearLayout>